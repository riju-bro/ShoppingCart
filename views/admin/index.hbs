
<div class="container">
    <div class="row">
        <table class="table">
        <thead>
            <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Image</th>
            <th scope="col">Description</th>
            <th scope="col">price</th>
            </tr>
        </thead>
        <tbody>
            {{#if products}}
            {{#each products}}
                <tr>
                <th scope="row">1</th>
                <td>{{this.name}}</td>
            <td><img style="width: 50px; height: 50px;" src="/product-images/{{this._id}}.jpg" alt="Card image cap"></td>
                <td>{{this.description}}</td>
                <td>{{this.price}}</td>
                <td>
                    <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary" onclick="confirm('Edit Product ?')">Edit</a>
                </td>
                <td>
                    <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="confirm('Delete Product ?')">Delete</a>
                </td>
                </tr>
            {{/each}}
            {{/if}}
        </tbody>
        </table>
    </div>

</div>